Import('env')

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "../src"
env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

env.RequirePublicApi(['HAL','DAL','SERVICES','SYSTEMDRIVERS'])

#-------------------------------------------------------------------------------
# Sources, libraries
#-------------------------------------------------------------------------------

CSR_HAL_SRC = [
   '${BUILDPATH}/halqdss_csr.c',
]

env.AddLibrary(['RPM_IMAGE','WCN_IMAGE','CBSP_WCN_IMAGE','CORE_GSS',
   'MODEM_PROC','CORE_QDSP6_SW','APPS_PROC','VENUS_VSS'],
   '${BUILDPATH}/csr_hal',CSR_HAL_SRC)


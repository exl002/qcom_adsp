;-----------------------------------------------------------------------------
; Global variables
;-----------------------------------------------------------------------------


;-----------------------------------------------------------------------------
; Local variables
;-----------------------------------------------------------------------------

local &choice
local &target

ENTRY &target

;-----------------------------------------------------------------------------
; Apply default target if none specified when executing this script
;-----------------------------------------------------------------------------

if "&target"==""
(
  &target="msm8974"
)

;-----------------------------------------------------------------------------
; Define the window
;-----------------------------------------------------------------------------

AREA.RESet
WINPOS 0. 0. 100% 100%
AREA.Create CLOCK
AREA.view CLOCK
AREA.Select CLOCK
AREA.Clear CLOCK

;-----------------------------------------------------------------------------
; Read input
;-----------------------------------------------------------------------------

on ERROR gosub
(
  print "An Error has Occurred"
  
  return
)

Main_Menu:

  AREA.Select CLOCK
  AREA.Clear CLOCK

  print " "
  print " "
  print "[------------------------------------------------ CLOCK MAIN MENU ------------------------------------------------]"
  print " "
  print "1: Clock Driver Structures"
  print "2: Clocks"
  print "3: PLLs"
  print " "
  print "l: Enable logging"
  print "x: Exit"
  print " "
  
  &t32_cmm_stopped=1
  print "Enter option: "
  enter &choice
  &t32_cmm_stopped=0
  print "&choice"

  if "&choice"=="x"
  (
    AREA.CLEAR CLOCK
    AREA.RESET
    WINCLEAR TOP
    term.close 
    enddo (0==0)
  )
  else if "&choice"=="l"
  (
    print "Enter log file [c:\temp\testclock.log]: "
    enter &logfile
    if "&logfile"==""
    (
      &logfile="c:\temp\testclock.log"
    )
    area.open CLOCK &logfile
  )
  else if &choice>3
  (
    GOTO Main_Menu 
  )
  else if &choice==1
  (
    ; Invoke ClockDriver script in menu mode to avoid creating a new
    ; area window.
    do ClockDriver.cmm menu
  )
  else if &choice==2
  (
    ; Invoke testclock script in menu mode to avoid creating a new
    ; area window.
    do &target\testclock.cmm menu
  )
  else if &choice==3
  (
    ; Invoke testpll script in menu mode to avoid creating a new
    ; area window.
    do &target\testpll.cmm menu
  )

  GOTO Main_Menu

;-----------------------------------------------------------------------------
;  END OF MAIN BODY
;-----------------------------------------------------------------------------


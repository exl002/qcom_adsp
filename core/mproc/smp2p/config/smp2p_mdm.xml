<driver name="NULL">
  <global_def></global_def>
  <device id="/core/mproc/smp2p">
    <props name="smp2p_intr_enabled" type= DALPROP_ATTR_TYPE_BYTE_SEQ>
      // Disable interrupts on edges where remote endpoint is not present.
      0x1, // Apps
      0x1, // MPSS/GSS
      0x1, // ADSP
      0x0, // DSPS
      0x0, // WCNSS
      0x0, // MdmFW
      0x1, // RPM
      end
    </props>
  </device>
</driver>

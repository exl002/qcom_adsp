print "tcb        [&tcb]"
print "ugp        [&ugp]"
print "stackaddr  [&stackaddr]"
print "stacksize  [&stacksize]"
print "stackend   [&stackend]"
print "stackratio [&stackratio%]"
print " "
print " "
write #2 "-----------------------------------------Issue with above thread"
&Error=1
goto start
)


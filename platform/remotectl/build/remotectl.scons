Import('env')
env = env.Clone()

if not 'USES_PLATFORM_MINIMAL' in env:
  platform_root = '${BUILD_ROOT}/platform'
  env.Replace(ADSP_PLATFORM_ROOT = platform_root)

  env.RequirePublicApi([
    'PLATFORM_LIBS',
    'STDDEF',
    'UTILS',
    'A1STD',
    'REMOTE',
    'MOD_TABLE',
    'QAIC',
    ])

  env.RequireRestrictedApi([
    'ATOMIC',
    'REMOTECTL',
    ])

  core_public_apis = [
     'DEBUGTOOLS',
     'KERNEL',
     'POWER',
     'SERVICES',
     ]

  env.RequirePublicApi(core_public_apis, area='core')
  #-------------------------------------------------------------------------------
  # Source PATH
  #-------------------------------------------------------------------------------
  SRCPATH = "${ADSP_PLATFORM_ROOT}/remotectl"
  env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

  REMOTECTL_SOURCES =  [
     '${BUILDPATH}/remotectl_hexagon.c',
     env.QaicSkelFromIdl("remotectl"),
     ]

  #-------------------------------------------------------------------------------
  # Add Libraries to image
  #-------------------------------------------------------------------------------
  remotectl_lib = env.AddBinaryLibrary(['SINGLE_IMAGE', 'CBSP_SINGLE_IMAGE', 'MODEM_IMAGE', 'CBSP_MODEM_IMAGE',
      'QDSP6_SW_IMAGE', 'CBSP_QDSP6_SW_IMAGE'],'${BUILDPATH}/remotectl', REMOTECTL_SOURCES)

  #-------------------------------------------------------------------------------
  # Load Subunits (sys)
  #-------------------------------------------------------------------------------
  env.LoadSoftwareUnits()

#Clean and pack rules
CLEAN_LIST=[]
CLEAN_LIST.extend(env.FindFiles(['*.c', '*.cpp'], '${ADSP_PLATFORM_ROOT}/remotectl'))
for x in env.FindFiles(['*.c', '*.cpp'], '${ADSP_PLATFORM_ROOT}/remotectl/build'):
      CLEAN_LIST.remove(x)
env.CleanPack(['SINGLE_IMAGE', 'CBSP_SINGLE_IMAGE', 'MODEM_IMAGE', 'CBSP_MODEM_IMAGE','QDSP6_SW_IMAGE', 'CBSP_QDSP6_SW_IMAGE'], CLEAN_LIST)

